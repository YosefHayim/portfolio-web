{
	"name": "portfolio-web",
	"private": true,
	"version": "1.0.0",
	"description": "Joseph Sabag's personal portfolio website - Full-Stack Developer showcasing projects, tech stack, and professional journey",
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter portfolio-client dev",
		"dev:server": "pnpm --filter portfolio-api dev",
		"dev:all": "concurrently \"pnpm dev\" \"pnpm dev:server\"",
		"build": "pnpm --filter portfolio-client build",
		"build:server": "pnpm --filter portfolio-api build",
		"build:all": "pnpm build && pnpm build:server",
		"preview": "pnpm --filter portfolio-client preview",
		"format": "pnpm --filter portfolio-client format",
		"lint": "pnpm --filter portfolio-client lint",
		"install:all": "pnpm install"
	},
	"keywords": [
		"portfolio",
		"react",
		"typescript",
		"vite",
		"tailwindcss",
		"full-stack"
	],
	"author": "Joseph Sabag <yosefhayim@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"concurrently": "^9.1.2"
	}
}
